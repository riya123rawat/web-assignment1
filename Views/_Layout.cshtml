<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/images/logo.png" alt="logo" />
        </div>
        <nav>
         
            <ul>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="Home" asp-action="Projects">Projects</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        
        @RenderBody()
    </div>

    <footer>
        <!-- Footer containing the current date and your name -->
        <p>&copy; @DateTime.Now.ToString("yyyy-MM-dd") - Babli Rawat</p>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>
